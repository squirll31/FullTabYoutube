{
  "manifest_version": 2,

  "name": "Switch To YouTube Embed",
  "short_name" : "YT Embed Nav",
  "description": "Switch from the standard desktop YouTube page to the full-tab embed player.",
  "version": "0.0.1.0",

  "icons" : { 
    "128" : "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "background" : {
    "scripts" : ["popup.min.js"],
    "persistent" : false
  },
  "permissions": [
    "activeTab"
  ]
}